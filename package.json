{
  "name": "grammy-reply-with-markdown",
  "version": "0.0.0",
  "description": "replyWithMarkdown method for grammY",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "compile": "tsc --noEmit",
    "lint": "eslint --ext .ts .",
    "test": "jest --coverage",
    "test:ci": "jest"
  },
  "repository": "https://github.com/vlad-yakovlev/grammy-reply-with-markdown.git",
  "keywords": [
    "grammy",
    "telegram",
    "markdown",
    "md",
    "reply",
    "send",
    "message",
    "sendMessage"
  ],
  "author": "Vladislav Yakovlev",
  "license": "MIT",
  "bugs": "https://github.com/vlad-yakovlev/grammy-reply-with-markdown/issues",
  "homepage": "https://github.com/vlad-yakovlev/grammy-reply-with-markdown#readme",
  "dependencies": {
    "telegram-md": "^1.3.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@types/jest": "^28.1.8",
    "@types/node": "^20.3.3",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "grammy": "^1.17.1",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist/*"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "arrow-body-style": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "max-len": [
        "off",
        120
      ],
      "no-underscore-dangle": "off"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.test\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
